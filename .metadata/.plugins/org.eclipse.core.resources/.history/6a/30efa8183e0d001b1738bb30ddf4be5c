<?php 

function resaltar ($texto){
    $html = "<h1>".$texto."</h1>";
    
    return $html;
}

function pintarRadio($nombre,$arrayValueLabel){
    $html = '';
        
    foreach($arrayValueLabel as $value => $label){
        $html = $html."Aquí va todo el código html de un formulario de radios"
    }
    
    return $html;
}
?>