<?php
namespace ev1;

$bd = [];
$departamento=[];
$empleado=[];

function menu (){
    $opcion = 1;
    
    while ($opcion!=0){
        echo <<<MENU
        
Escoge una opción:

DEPARTAMENTO
1.- Crear
2.- Modificar
3.- Borrar
4.- Recuperar todos
5.- Recuperar por Id

EMPLEADO
6.- Crear
7.- Modificar
8.- Borrar
9.- Recuperar todos
10.- Recuperar por Id

0.- SALIR

MENU;
        
        echo 'Opción: ';
        fscanf(STDIN,"%d/n", $opcion);
    }
    return $opcion;
}



?>